            </TreeView>
        </VBox>

    </left>

    <center>
        <VBox>

            <ComboBox fx:id="cbBoxLenguaje" promptText="Lenguaje"/>
            <TableView minWidth="300" minHeight="400"/>
            <HBox minHeight="50" spacing="15">
                <Button fx:id="btnADDuser">AÃ±adir usuario</Button>
