                <Button fx:id="btnDELETEuser">Eliminar usuario</Button>
                <Button fx:id="btnUPDATEuser">Actualizar tabla</Button>
            </HBox>
        </VBox>
    </center>

    <right>
        <VBox minWidth="200" maxWidth="200">
            <padding>
                <Insets top="30" left="20.0" right="20.0" bottom="0"/>
            </padding>
            <Label fx:id="labelDetails"/>
            <Label fx:id="labelInformationDetails" text="Informacion detalladan sobre usuarios"/>
        </VBox>

    </right>

</BorderPane>
