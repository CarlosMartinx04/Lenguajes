<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.lenguajes.HelloController">
    <padding>
        <Insets bottom="20.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <left>
        <VBox>
            <HBox BorderPane.alignment="CENTER" minWidth="100">
                <MenuBar>
                    <Menu text="Archivo"/>
                    <Menu text="Editar"/>
                    <Menu text="Ayuda"/>
                </MenuBar>
            </HBox>

            <TreeView>
                <root>
                    <TreeItem value="Menu Principal">
                        <children>
                            <TreeItem value="Gestion">
                                <children>
                                    <TreeItem value="Usuarios"/>
                                    <TreeItem value="Permisos"/>
                                    <TreeItem value="Roles"/>
                                </children>
                            </TreeItem>
                        </children>
                    </TreeItem>
                </root>
            </TreeView>
        </VBox>

    </left>

    <center>
        <VBox>
            <ComboBox promptText="Lenguaje"/>
            <TextArea minWidth="400" minHeight="200"/>
            <HBox>
                <Button>AÃ±adir usuario</Button>
                <Button>Editar usuario</Button>
                <Button>Eliminar usuario</Button>
                <Button>Actualizar tabla</Button>
            </HBox>
        </VBox>
    </center>

    <right>
        <VBox minWidth="100" maxWidth="100">
            <padding>
                <Insets top="30" left="20.0" right="20.0" bottom="0"/>
            </padding>
            <Label text="Detalles"/>
            <Label text="Informacion detallada sobre usuarios"/>
        </VBox>

    </right>

    <Label fx:id="welcomeText"/>
    <Button text="Hello!" onAction="#onHelloButtonClick"/>
</BorderPane>
