        <Insets bottom="20.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <left>
        <VBox minWidth="100" maxWidth="300">
            <HBox BorderPane.alignment="CENTER" maxWidth="200" >
                <MenuBar>
                    <Menu fx:id="menuArchivo" text="Archivo"/>
                    <Menu fx:id="menuEditar" text="Editar"/>
                    <Menu fx:id="menuAyuda" text="Ayuda"/>
                </MenuBar>
            </HBox>

            <TreeView minWidth="200" maxWidth="200">
                <TreeItem fx:id="treeItemPRINCIPAL">
                    <children>
